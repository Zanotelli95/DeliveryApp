<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.registro">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/roboto_mono_medium_italic"
                    android:text="Registro"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Completa este formulario" />

                <EditText
                    android:id="@+id/nombreFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fondoedittext"
                    android:hint="Nombre"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/apellidoFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fondoedittext"
                    android:hint="Apellido"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/EmailFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fondoedittext"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/TelefonoFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fondoedittext"
                    android:hint="Telefono"
                    android:inputType="phone"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/Contrase単aFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fondoedittext"
                    android:hint="Contrase単a"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp" />


                <EditText
                    android:id="@+id/ConfirmarContrase単aFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fondoedittext"
                    android:hint="Confirmar contrase単a"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp" />


                <Button
                    android:id="@+id/buttonRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/botonredondeado"
                    android:text="Registrarse" />

                <ImageView
                    android:id="@+id/imagenRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Volver" />


            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>